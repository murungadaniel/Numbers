        <definition xml:id="def-square-of-a-number">
            <statement>
                <p>
                    The square of a number is a product of the number by itself.
                </p>
            </statement>
        </definition>
        <p>
            The square of a number is a product of the number by itself.
        </p>
        <example>
            <statement>
                <p>
                    <ol cols="2" marker="a)">
                        <li>
                            <p>
                                What is the square of <m>15 </m>?
                            </p>
                        </li>
                        <li>
                            <p>
                                Work out: <m>132^2</m>
                            </p>
                        </li>
                    </ol>
                </p>
            </statement>
            <solution>
                <p>
                    <ol marker="a)" cols="2">
                        <li>
                            <p>
                                <md>
                                     <mrow>15^2 \amp = 15 \times 15 </mrow>
                                     <mrow> \amp = 225 </mrow>
                                </md>
                            </p>
                            <!-- <table> -->
                                <!-- <title></title> -->
                                <tabular>
                                    <row>
                                        <cell halign="right"><m>15</m></cell>
                                        <cell></cell>
                                    </row>
                                    <row halign="right">
                                        <cell bottom="medium"><m>\times \, 15</m></cell>
                                        <cell></cell>
                                    </row>
                                    <row halign="right">
                                        <cell>75</cell>
                                        <cell halign="left"><m>15 \times 5</m></cell>
                                    </row>
                                    <row halign="right">
                                        <cell bottom="medium"><m>+ 150</m></cell> 
                                        <cell halign="left"><m>15 \times 10</m></cell>
                                    </row>
                                    <row halign="right">
                                        <cell bottom="medium"><m>225</m></cell>
                                        <cell></cell>
                                    </row>
                                </tabular>
                            <!-- </table> -->
                        </li>
                        <li>
                            <p>
                                <md>
                                    <mrow>132^2 \amp = 132 \times 132</mrow>
                                    <mrow> \amp = 17\,424</mrow>
                                </md>
                            </p>
                            <!-- <table> -->
                                <!-- <title></title> -->
                                <tabular>
                                    <row>
                                        <cell halign="right"><m>132</m></cell>
                                        <cell></cell>
                                    </row>
                                    <row>
                                        <cell halign="right" bottom="medium"><m>\times 132</m></cell>
                                        <cell></cell>
                                    </row>
                                    <row>
                                        <cell halign="right"><m>264</m></cell>
                                        <cell halign="left"> <m>132 \times 2</m></cell>
                                    </row>
                                    <row halign="right">
                                        <cell halign="right"><m>+ 3\,960</m></cell>
